<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/song"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/play_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_play_circle_filled_black_18dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>

        <ImageButton
            android:id="@+id/pause_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_pause_circle_filled_black_18dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>

        <ImageButton
            android:id="@+id/replay_btn"
            android:layout_width="0dp"
            android:src="@drawable/baseline_replay_black_18dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/looping_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:text="@string/loop"
            android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>